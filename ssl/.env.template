# Environment Variables Template for SSO Application
# Copy this file to .env and update the values as needed

# SSL Certificate Paths (for HTTPS servers)
SSL_ESERVICE_CERT_PATH=./ssl/certs/eservice.crt
SSL_ESERVICE_KEY_PATH=./ssl/private/eservice.key
SSL_MOCKPASS_CERT_PATH=./ssl/certs/mockpass.crt
SSL_MOCKPASS_KEY_PATH=./ssl/private/mockpass.key

# SAML Configuration
SAML_SIGNING_CERT_PATH=./ssl/saml/public.crt
SAML_SIGNING_KEY_PATH=./ssl/saml/key.pem

# Base64 encoded SAML keys (for environment variables)
SAML_PUBLIC_CERT_BASE64=
SAML_PRIVATE_KEY_BASE64=

# OIDC/JWT Configuration
JWT_PRIVATE_KEY_PATH=./ssl/oidc/private_key.pem
JWT_PUBLIC_KEY_PATH=./ssl/oidc/public_key.pem

# Base64 encoded JWT keys (for environment variables)
JWT_PRIVATE_KEY_BASE64=
JWT_PUBLIC_KEY_BASE64=

# Encryption Key (32-byte base64 encoded)
ENCRYPTION_KEY=

# Application URLs
ESERVICE_URL=https://eservice.localhost:3000
MOCKPASS_URL=https://mockpass.localhost:5000

# SAML Configuration
SAML_ISSUER=urn:example:sso
SAML_CALLBACK_URL=https://eservice.localhost:3000/saml/callback
SAML_LOGOUT_URL=https://eservice.localhost:3000/saml/logout

# JWT Configuration
JWT_ISSUER=https://eservice.localhost:3000
JWT_AUDIENCE=eservice-api
JWT_EXPIRATION=3600

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=1800

# Database Configuration (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sso_db
DB_USER=sso_user
DB_PASSWORD=your-db-password

# Redis Configuration (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development/Production Mode
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=https://eservice.localhost:3000,https://mockpass.localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS Settings
SSL_REJECT_UNAUTHORIZED=false
HTTPS_PORT=3000
HTTP_REDIRECT_HTTPS=true