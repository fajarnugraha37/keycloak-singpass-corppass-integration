<!-- Main Content with Animation Grid -->
<main class="main-content" id="features">
    <!-- Action Controls Section -->
    <section class="action-section">
        <div class="container">
            <div class="section-header scroll-3d-fold">
                <h2 class="section-title">Authentication Controls</h2>
                <p class="section-description">
                    Interactive authentication flow management for personnel system
                </p>
            </div>

            <!-- Information Cards Grid with 3D Effects -->
            <div class="info-section">
                <div class="container">
                    <div class="info-grid scroll-fade-in">
                        <!-- Authentication Details Card -->
                        <div class="info-card interactive-card scroll-slide-left scroll-3d-perspective">
                            <div class="card-header">
                                <div class="card-title">
                                    <span class="status-dot"></span>
                                    Authentication Details
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="detail-item">
                                    <span class="detail-label">Provider</span>
                                    <span class="detail-value keycloak">Keycloak</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Realm</span>
                                    <span class="detail-value">agency-realm</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Flow</span>
                                    <span class="detail-value">Authorization Code + PKCE</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Library</span>
                                    <span class="detail-value">keycloak-js</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">System</span>
                                    <span class="detail-value enabled">Personnel Management</span>
                                </div>
                            </div>
                        </div>

                        <!-- Features Card -->
                        <div class="info-card interactive-card scroll-slide-right scroll-3d-perspective">
                            <div class="card-header">
                                <div class="card-title">
                                    <span class="status-dot success"></span>
                                    Platform Features
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="feature-list">
                                    <div class="feature-item">
                                        <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Personnel data access</span>
                                    </div>
                                    <div class="feature-item">
                                        <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Government SSO integration</span>
                                    </div>
                                    <div class="feature-item">
                                        <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Secure token management</span>
                                    </div>
                                    <div class="feature-item">
                                        <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Cross-platform compatibility</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="auth-controls-grid scroll-fade-in">
                <button id="logout" class="auth-btn danger hidden">
                    <div class="btn-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <span>Logout</span>
                </button>

                <button id="login" class="auth-btn primary hidden">
                    <div class="btn-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <span>Secure Login</span>
                </button>

                <button id="userinfo" class="auth-btn secondary hidden">
                    <div class="btn-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <span>User Profile</span>
                </button>

                <button id="callapi" class="auth-btn secondary hidden">
                    <div class="btn-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0m5 0m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0m5 0m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0">
                            </path>
                        </svg>
                    </div>
                    <span>SDPC API</span>
                </button>

                <button id="switch" class="auth-btn switch">
                    <div class="btn-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <span>Switch to SAECA</span>
                </button>
            </div>
        </div>
    </section>
</main>